<div class="row justify-content-center allBurgers">
    <h1 class="col-10">Amazing Burgers!</h1>

    <div class="row col-12 justify-content-center">
        {{!-- Uneaten Burger --}}
        <div class="col-5 burgers">
            <div>
                <h2>Eat the Burger</h2>
                    {{#each burgers}}
                    {{#unless devoured}}
                        {{!-- <form method="PUT" action="/update" class="change-form" id="updateBurger"> --}}
                            <label for="uneatenBurgers" class="burgers">{{id}}. {{this.burger_name}}</label>
                            <button class="btn btn-secondary change-devoured" data-id="{{this.id}}">Nam Nam!</button>
                            <br>
                        {{!-- </form> --}}
                    {{/unless}}    
                {{/each}}
            </div>
        </div>

        {{!-- Eaten Burgers --}}
        <div class="col-5 burgers">
            <h2>Eaten Burgers!</h2>    
            <div>
                {{#each burgers}}
                    {{#if devoured}}
                        <label for="devouredBurgers" class="burgers">{{this.burger_name}}</label>
                        <br>
                        <br>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row col-12 justify-content-center">
        {{!-- Adding a burger --}}
        <div class="col-10 burgers" id="AddBurger">
            <h2>Create a New Burger</h2>
            <form method="POST" action="/insertOne" class="create-form" id="createBurger" required="" minlength="1">
                <div class="form-group">
                    <label for="ca">Enter Burger Name:</label>
                    <br>
                    <input type="text" id="ca" name="newBurger" required="">
                    <br>
                    <button class="btn btn secondary" type="submit" >Create My Burger!!</button>
                </div>
            </form>
        </div>
    </div>
</div>
